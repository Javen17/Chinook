@using Chinook.BusinessModel.Models
@model Song
@{
    ViewData["Title"] = "Crear Empleado";
    var employees = (List<Employee>)ViewBag.Employees;

}

<div class="d-flex justify-content-center">
    <form class="w-75" enctype="multipart/form-data" method="post" asp-controller="Employee" asp-action="Store">
        <h4>Nuev@@ Emplead@@</h4>

        <div class="form-group">
            <label for="Name">Nombres</label>
            <input type="text" class="form-control" id="Name" name="Name" required>
        </div>

        <div class="form-group">
            <label for="LastName">Apellidos</label>
            <input type="text" class="form-control" id="LastName" name="LastName" required>
        </div>

        <div class="form-group">
            <label for="Email">Correo</label>
            <input type="email" class="form-control" id="Email" name="Email" required>
        </div>

        <div class="form-group">
            <label for="Phone">Teléfono</label>
            <input type="text" class="form-control" id="Phone" name="Phone" required>
        </div>

        <div class="form-group">
            <label for="JobPosition">Cargo</label>
            <input type="text" class="form-control" id="JobPosition" name="JobPosition" required>
        </div>

        <div class="form-group">
            <label for="DirectBoss">Jefe Directo</label>
            <select class="form-control" id="DirectBoss" name="DirectBoss">
                <option>Seleccione...</option>
                @foreach (var emp in employees)
                {
                    <option value="@emp.EmployeeId">@emp.Name @emp.LastName</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>

@section Scripts{
    <script src="~/js/select2.full.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#DirectBoss').select2();
        })
    </script>
}

