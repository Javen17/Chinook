@using Chinook.BusinessModel.Models
@model Song
@{
    ViewData["Title"] = "Editar Canción";
    var genres = (List<Genre>)ViewBag.GenreItems;
    var albums = (List<Album>)ViewBag.AlbumItems;
    var current = (Song)ViewBag.CurrentSong;

}

<div class="d-flex justify-content-center">
    <form class="w-75" enctype="multipart/form-data" method="post" asp-controller="Song" asp-action="Change">
        <h4>Nueva Canción</h4>

        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@current.Name" required>
        </div>

        <input name="Id" type="hidden" value="@current.SongId" />

        <div class="form-group">
            <label for="Genre">Genre</label>
            <select class="form-control" id="Genre" name="Genre" required>
                <option>Seleccione...</option>
                @foreach (var genre in genres)
                {
                    @if (genre.GenreId == current.GenreId)
                    {
                        <option selected value="@genre.GenreId">@genre.Name</option>
                    }
                    else
                    {
                        <option value="@genre.GenreId">@genre.Name</option>
                    }

                }
            </select>
        </div>

        <div class="form-group">
            <label for="Album">Album</label>
            <select class="form-control" id="Album" name="Album" required>
                <option>Seleccione...</option>
                @foreach (var album in albums)
                {
                    @if (album.AlbumId == current.AlbumId)
                    {
                        <option selected value="@album.AlbumId">@album.Name</option>
                    }
                    else
                    {
                        <option value="@album.AlbumId">@album.Name</option>
                    }

                }
            </select>
         </div>



        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>